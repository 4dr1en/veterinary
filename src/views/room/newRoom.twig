{% extends "body.twig" %}

{% block main %}

<main class="container">
	<div>
		<h1 class="display-4 mt-4 mb-5">Register a new room</h1>

		<form action="/new-customer" method="post" class="mb-5">
			<div class="form-group col-md-3 mb-2">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="Name">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="speciality">Speciality</label>
				<input type="text" class="form-control" id="speciality" name="speciality" placeholder="Speciality">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="veterinary-practice">Veterinary practice</label>
				<select id="veterinary-practice" name="veterinaryPractice" class="form-select" aria-label="Veterinary practice">
					<option selected value="">select the veterinary practice</option>
					{% for veterinaryPractice in veterinaryPractices %}
						<option value="{{veterinaryPractice.id}}">{{veterinaryPractice.id}}-{{veterinaryPractice.name}}</option>
					{% endfor %}
				</select>
			</div>
			
			<button type="submit" class="btn btn-primary mt-2">Submit</button>
		</form>
	</div>
</main>
{% endblock %}
