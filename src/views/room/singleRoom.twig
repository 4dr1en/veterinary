{% extends "body.twig" %}

{% block main %}
<div class="container">
	<div class="mt-5 mb-5 row">

		<h1 class="show-1 mb-3">
			{{ room.name | capitalize}}
		</h1>
	
		{% if room.speciality %}
			<p class="mb-3"><b>Speciality: </b>{{ room.speciality }}</p>
		{% endif %}

		{% if room.veterinaryPractice is not null %}

			<p class="mb-3">
				<b>Veterinary practice: </b>
				<a href="/veterinary-practice/{{ room.veterinaryPractice.id }}">
					{{ room.veterinaryPractice.name }}
				</a>
			</p>

		{% endif %}

	</div>
	<div>
		<a href="/room/update/{{ room.id }}" class="text-warning">
			Update
		</a>
	</div>
</div>

{% endblock %}
