{% extends "body.twig" %}

{% block main %}

<main class="container">
	<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Speciality</th>
              <th scope="col">Veterinary practice</th>
              <th scope="col">Link</th>
            </tr>
          </thead>
          <tbody>

		  {% for room in rooms %}
            <tr>
              <td>{{ room.name }}</td>
              <td>{{ room.speciality }}</td>
              <td><a href="/veterinary-practice/{{ room.veterinaryPractice.id }}">{{ room.veterinaryPractice.name }}</a></td>
              <td><a href="/room/{{ room.id }}">Link</a></td>
            </tr>
		  {% endfor %}
          
          </tbody>
        </table>
      </div>
</main>

{% endblock %}