{% extends "body.twig" %}

{% block main %}

<main class="container">
	<div class="container">
		<h1 class="display-4 mt-4 mb-5">Register a new customer</h1>

		<form action="/new-customer" method="post" class="mb-5">
			<div class="form-group col-md-3 mb-2">
				<label for="firstname">Firstame</label>
				<input type="text" class="form-control" id="firstname" name="firstname" placeholder="Firstname">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="lastname">Lastname</label>
				<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Lastname">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="address">Address</label>
				<input type="text" class="form-control" id="address" name="address" placeholder="Address">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="phone-number">Phone number</label>
				<input type="text" class="form-control" id="phone-number" name="phoneNumber" placeholder="Phone number">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="email">Email</label>
				<input type="email" class="form-control" id="email" name="email" placeholder="Email">
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="veterinary-practice">Veterinary practice</label>
				<select id="veterinary-practice" name="veterinaryPractice" class="form-select" aria-label="Veterinary practice">
					<option selected value="">select the veterinary practice</option>
					{% for veterinaryPractice in veterinaryPractices %}
						<option value="{{veterinaryPractice.id}}">{{veterinaryPractice.name}}</option>
					{% endfor %}
				</select>
			</div>
			<div class="form-group col-md-3 mb-2">
				<label for="registration-date">Registartion date</label>
				<input type="date" class="form-control" id="registration-date" name="registrationDate" placeholder="Registration date">
			</div>
			<div class="form-group col-md-6 mb-2">
				<label for="informations">Informations</label>
				<textarea class="form-control" id="informations" name="informations" rows="3"></textarea>
			</div>
			
			<button type="submit" class="btn btn-primary mt-2">Submit</button>
		</form>
	</div>
</main>
{% endblock %}
