{% extends "body.twig" %}

{% block main %}

<div class="container">
	<div class="mt-5 mb-5">
		
		<h1 class="show-1 mb-4">
			{{ veterinaryCare.name }}
		</h1>

		{% if veterinaryCare.animal is not null %}
			<div class="mb-3">
				<div>
					<b>Animal: </b><a href="/animal/{{ veterinaryCare.animal.id }}">
						{{ veterinaryCare.animal.name }}
					</a>
				</div>
				{% if veterinaryCare.animal.species is not null %}
					<div>
						<b>Animal species: </b> {{ veterinaryCare.animal.species }}
					</div>
				{% endif %}
			</div>
		{% endif %}
		{% if veterinaryCare.veterinarian is not null %}
			<div class="mb-3">
				<b>Veterinarian: </b><a href="/veterinarian/{{ veterinaryCare.veterinarian.id }}">
					{{ veterinaryCare.veterinarian }}
				</a>
			</div>
		{% endif %}
		{% if veterinaryCare.room is not null %}
			<div class="mb-3">
				<b>Room: </b><a href="/room/{{ veterinaryCare.room.id }}">
					{{ veterinaryCare.room.name }}
				</a>
			</div>
		{% endif %}
		{% if veterinaryCare.startDate is not null %}
			<div class="card-text mb-3">
				<b>Start date :</b> {{ veterinaryCare.startDate|format_datetime('long', 'short', locale='fr') }}
			</div>
		{% endif %}
		{% if veterinaryCare.endDate is not null %}
			<div class="card-text mb-3">
				<b>End date :</b> {{ veterinaryCare.endDate|format_datetime('long', 'short', locale='fr') }}
			</div>
		{% endif %}
		{% if veterinaryCare.price is not null %}
			<div class="card-text mb-3">
				<b>Price :</b> {{ (veterinaryCare.price / 100) |format_currency('USD', {fraction_digit: 2}, 'US')}}

				{% if veterinaryCare.isPaid %}
					<p class="text-success">Had been paid.</p>
				{% else %}
					<p class="text-warning">Had not been paid yet.</p>
				{% endif %}
			</div>
		{% endif %}
		{% if veterinaryCare.informations is not null %}
			<h2>Informations</h2>
			<p>{{ veterinaryCare.informations }}</p>
		{% endif %}


	</div>
</div>

{% endblock %}
